<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <div class = "h-25 d-inline-block bg-info" size="wide: 400px;">
      <%= image_tag(photo.image_url, class: "card-img-top", width: "100%", background: "#55595c", color: "#eceeef") %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= link_to photo.image, photo %></p>

      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Clasificar", edit_photo_path(photo) %></button>

        </div>
      </div>
    </div>
  </div>
</div>